{
  "name": "jira-cloud",
  "version": "0.1.0",
  "description": "A Model Context Protocol server",
  "private": true,
  "type": "module",
  "bin": {
    "jira-cloud": "build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc",
    "postbuild": "node --eval \"import('fs').then(fs => fs.chmodSync('build/index.js', '755'))\"",
    "prepare": "npm run build",
    "test": "echo \"Tests will be implemented in the future\" && exit 0",
    "lint": "eslint --ext .ts src/",
    "lint:fix": "eslint --ext .ts src/ --fix",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js",
    "generate-diagrams": "./scripts/build-diagrams.sh",
    "update-doc-timestamps": "node scripts/update-doc-timestamps.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.3",
    "jira.js": "^5.2.2",
    "jsdom": "^27.3.0",
    "markdown-it": "^14.1.0"
  },
  "devDependencies": {
    "@types/jsdom": "^27.0.0",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@ysk8hori/typescript-graph": "^0.26.5",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.32.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
