{
  "name": "jira-cloud",
  "version": "0.1.0",
  "description": "A Model Context Protocol server",
  "private": true,
  "type": "module",
  "bin": {
    "jira-cloud": "build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc",
    "postbuild": "node --eval \"import('fs').then(fs => fs.chmodSync('build/index.js', '755'))\"",
    "prepare": "npm run build",
    "test": "echo \"Tests will be implemented in the future\" && exit 0",
    "lint": "eslint --ext .ts src/",
    "lint:fix": "eslint --ext .ts src/ --fix",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js",
    "generate-diagrams": "npx tsuml2 --glob \"./src/**/*.ts\" --output docs/generated/class-diagram && mv -f out.svg docs/generated/class-diagram.svg"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.6.0",
    "jira.js": "^4.0.5",
    "jsdom": "^26.0.0",
    "markdown-it": "^14.1.0"
  },
  "devDependencies": {
    "@types/jsdom": "^21.1.7",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.31.0",
    "tsuml2": "^0.6.2",
    "typescript": "^5.3.3"
  }
}
